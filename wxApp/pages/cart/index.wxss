.wrap .address {
  padding: 20rpx 0;
}
.wrap .address button {
  font-size: 36rpx;
}
.wrap .Address {
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #dedede;
}
.wrap .Address view {
  text-align: center;
  font-size: 30rpx;
  padding: 5rpx 0;
}
.wrap .Address view:nth-of-type(1) {
  font-size: 40rpx;
  padding: 20rpx 0;
}
.wrap .shopping_wrap {
  padding-bottom: 20vw;
}
.wrap .shopping_wrap .shopping_title {
  color: var(--themeColor);
  text-align: center;
  font-size: 41rpx;
  font-weight: 600;
  padding: 20rpx 20rpx;
  border-top: 1rpx solid #dedede;
}
.wrap .shopping_wrap .tools {
  display: flex;
  padding: 10rpx 0;
}
.wrap .shopping_wrap .tools text {
  flex: 1;
  height: 10vw;
  line-height: 10vw;
  text-align: center;
  border: 1rpx solid #dedede;
  border-right: none;
}
.wrap .shopping_wrap .empty {
  text-align: center;
}
.wrap .shopping_wrap .empty image {
  width: 100%;
}
.wrap .shopping_wrap .shopping_item {
  display: flex;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #dedede;
  padding: 30rpx 0;
}
.wrap .shopping_wrap .shopping_item .checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrap .shopping_wrap .shopping_item .goods_image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrap .shopping_wrap .shopping_item .goods_image image {
  width: 80%;
}
.wrap .shopping_wrap .shopping_item .goods_info {
  flex: 4;
  display: flex;
  flex-wrap: wrap;
}
.wrap .shopping_wrap .shopping_item .goods_info .Info_name {
  flex: 100%;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding: 10rpx 0 0 0;
}
.wrap .shopping_wrap .shopping_item .goods_info .Info_price {
  flex: 1;
  color: var(--themeColor);
  font-size: 35rpx;
  padding: 20rpx;
}
.wrap .shopping_wrap .shopping_item .goods_info .Info_num {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0 0 0;
}
.wrap .shopping_wrap .shopping_item .goods_info .Info_num view {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.wrap .shopping_wrap .shopping_item .goods_info .Info_num view:nth-of-type(2n-1) {
  border: 1rpx solid #dedede;
}
.wrap .footer {
  position: fixed;
  bottom: 0;
  z-index: 20;
  display: flex;
  width: 100%;
  height: 13vw;
  border-top: 1rpx solid #dedede;
  border-bottom: 1rpx solid var(--themeColor);
  background-color: #fff;
}
.wrap .footer .checkbox {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrap .footer .f_content {
  flex: 3;
  text-align: right;
  padding: 10rpx 20rpx 0 0;
}
.wrap .footer .f_content text {
  font-size: 32rpx;
  color: var(--themeColor);
}
.wrap .footer .f_right {
  position: relative;
  flex: 2;
  background-color: var(--themeColor);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrap .footer .f_right button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
